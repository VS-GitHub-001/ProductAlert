@model IEnumerable<ProductAlert.Models.BatchAlert>

@{
    ViewBag.Title = "Index";
}

<h2>BATCH ALERT NOTIFICATION</h2>
@if(TempData["r"] != null)
            {
                <h1>@TempData["r"]</h1>
            }
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Batch</th>
        <th>Users</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Batch)
    </td>
    <td>
        @item.ProductNotifies.Count()
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
        @Html.ActionLink("Send Alert", "Send", new { id = item.Id })
    </td>
</tr>
}

</table>
